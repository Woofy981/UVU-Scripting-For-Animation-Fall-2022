using System;

namespace MyApplication
{
  class Program
  {
    static void Main(string[] args)
    {
    double d;
    float f;
    // Initializing values
    int first = 1, second = 2;
    char one = 'A', two = 'B';
    bool truth = true, fake = false;
    string yes = "Agree", no = "Disagree";
    // never changing values
    const string myFavFood = "Sushi", myFavAnimal = "Wolf";
    // declaring values later
    d = 90.10D;
    f = 7.90F;
    // Splitting up the lines for readability
    Console.WriteLine("Declared values later:");
    Console.WriteLine("	Double: " + d + ", Float: " + f);
    Console.WriteLine();
    Console.WriteLine("Initialized values: ");
    Console.WriteLine("	Chars: " + one + ", " + two);
    Console.WriteLine("	Bools: " + truth + ", " + fake);
    Console.WriteLine("	Strings: " + yes + ", " + no);
    Console.WriteLine();
    Console.WriteLine("Constant values:");
    Console.WriteLine("	Strings: " + myFavFood + ", " + myFavAnimal);
     }
  }
}
